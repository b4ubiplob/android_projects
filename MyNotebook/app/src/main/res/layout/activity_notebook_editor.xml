<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NotebookEditorActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notebookTitle"
        android:gravity="top"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="@string/enter_notebook_title"
        android:inputType="textCapSentences"
        android:layout_alignEnd="@+id/notebookDesc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notebookDesc"
        android:gravity="top"
        android:layout_alignBottom="@id/notebookTitle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/enter_notebook_description"
        android:inputType="textMultiLine|textCapSentences"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notebookTitle" />

</RelativeLayout>
